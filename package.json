{
  "name": "naninovel-script-spec",
  "version": "0.1.3",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "clean": "rimraf dist",
    "build": "yarn clean && yarn build:js && yarn build:types",
    "build:js": "esbuild src/index.ts --bundle --platform=node --format=cjs --outfile=dist/index.js",
    "build:types": "dts-bundle-generator -o dist/index.d.ts src/index.ts",
    "lint": "yarn eslint && yarn prettier",
    "lint-fix": "yarn eslint --fix && yarn prettier-fix",
    "prettier-fix": "prettier --write \"./**/*.{ts,js,vue,css}\"",
    "prettier": "prettier --check \"./**/*.{ts,js,vue,css}\"",
    "test": "yarn jest"
  },
  "repository": "git@github.com:tunacook/naninovel-script-spec.git",
  "author": "tunacook <tunacook0704@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "dts-bundle-generator": "^9.5.1",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "jest": "^30.1.2",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.4",
    "typescript-eslint": "^8.41.0"
  },
  "dependencies": {
    "typescript": "^5.9.2"
  }
}
