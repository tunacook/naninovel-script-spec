{
  "name": "naninovel-script-spec",
  "version": "0.1.3",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "clean": "rimraf dist",
    "prepare": "npm run build",
    "build": "yarn clean && yarn build:js && yarn build:types && cp dist/index.d.ts dist/index.d.cts",
    "build:js": "esbuild src/index.ts --bundle --platform=node --format=cjs --outfile=dist/index.js",
    "build:types": "dts-bundle-generator --no-check -o dist/index.d.ts src/index.ts",
    "lint": "yarn eslint && yarn prettier",
    "lint-fix": "yarn eslint --fix && yarn prettier-fix",
    "prettier-fix": "prettier --write \"./**/*.{ts,js,vue,css}\"",
    "prettier": "prettier --check \"./**/*.{ts,js,vue,css}\"",
    "test": "yarn jest"
  },
  "repository": "git@github.com:tunacook/naninovel-script-spec.git",
  "author": "tunacook <tunacook0704@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "dts-bundle-generator": "^9.5.1",
    "esbuild": "^0.27.0",
    "eslint": "^9.34.0",
    "jest": "^30.2.0",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "ts-jest": "^29.4.5",
    "typescript-eslint": "^8.46.2"
  },
  "dependencies": {
    "typescript": "^5.9.3"
  }
}
